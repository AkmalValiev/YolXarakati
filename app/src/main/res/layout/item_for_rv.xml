<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:background="@drawable/background_for_rv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_rv_item"
                android:src="@drawable/ic_image1122"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tv_title_item"
                app:layout_constraintBottom_toTopOf="@id/edit_bt"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Akmal"
                app:layout_constraintLeft_toRightOf="@id/iv_rv_item"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="170dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image_love"
                android:src="@drawable/ic_vector__44_"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image_love_red"
                android:visibility="invisible"
                android:src="@drawable/ic_vector__45_"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="5dp"
                android:id="@+id/delete_bt"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/background_for_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_delete_outline_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#005CA1"
                    android:text="O'chirish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit_bt"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/delete_bt"
                android:background="@drawable/background_for_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_mode_edit_outline_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#005CA1"
                    android:text="O'zgartirish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>